# The Cyphers API - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port (default: 3002)
PORT=3002

# Environment: development | production | test
NODE_ENV=development

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000

# ===========================================
# DATABASE
# ===========================================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:password@localhost:5432/cyphers_db"

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT secret key (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# JWT issuer (your domain)
JWT_ISSUER=punks.24hrmvp.xyz

# JWT expiration (default: 7d)
JWT_EXPIRES_IN=7d

# ===========================================
# AI GENERATION (ANTHROPIC)
# ===========================================

# Anthropic API key for Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxx

# ===========================================
# IPFS STORAGE (PINATA)
# ===========================================

# Pinata API credentials
# Get from: https://app.pinata.cloud/
PINATA_API_KEY=
PINATA_SECRET_KEY=
PINATA_JWT=

# ===========================================
# DOGECOIN NODE
# ===========================================

# Dogecoin RPC URL
DOGE_RPC_URL=http://localhost:22555

# RPC credentials (if required)
DOGE_RPC_USER=rpcuser
DOGE_RPC_PASS=rpcpassword

# ===========================================
# MINTING CONFIGURATION
# ===========================================

# Address to receive minting fees
INSCRIPTION_FEE_ADDRESS=DYourPaymentAddress

# Price per mint in DOGE
MINT_PRICE_DOGE=100

# Maximum supply
MAX_SUPPLY=1000

# ===========================================
# REDIS (OPTIONAL - for queues)
# ===========================================

# Redis URL for job queues
REDIS_URL=redis://localhost:6379

# ===========================================
# CROSS-PLATFORM INTEGRATION
# ===========================================

# Main platform URL for linking
MAIN_PLATFORM_URL=https://24hrmvp.xyz
